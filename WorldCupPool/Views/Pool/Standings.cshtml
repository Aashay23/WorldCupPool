@{
    ViewData["Title"] = "Purdue World Cup Pool - Standings";
}

<div style="height: 50px"></div>
@{
    if (Model.isAdmin) {
        <div style="height: 50px">
            <button class="btn btn-default" style="height:30px">Refresh Standings</button>
        </div>
    }
}
<div class="col-sm-2"></div>
<div class="container-fluid col-sm-8">
    <table class="table">
        <thead>
            <tr>
                <th scope="col" style="text-align: center">Name</th>
                <th scope="col" style="text-align: center">Total Points</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach(var bet in Model.Standings)
                {
                    <tr>
                        <td align="center">@bet.Name</td>
                        <td align="center">@bet.TotalPoints</td>
                    </tr>
                }
            }
        </tbody>
    </table> 
</div>