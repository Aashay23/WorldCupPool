@{
    ViewData["Title"] = "Purdue World Cup Pool - Bets";
}

<div style="height: 50px"></div>
<div class="col-sm-2"></div>
<div class="container-fluid col-sm-8">
    <table class="table">
        <thead>
            <tr>
                <th scope="col" style="text-align: center">Name</th>
                <th scope="col" style="text-align: center">Bet</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach(var bet in Model)
                {
                    <tr>
                        <td align="center">@bet.Name</td>
                        <td align="center">@string.Join(", ", @bet.SelectedTeams)</td>
                    </tr>
                }
            }
        </tbody>
    </table> 
</div>
